@model CalendarWeb.Entities.Category
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container mt-4">
    <h2>Kategori Ekle</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryName, "Kategori AdÄ±")
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group mt-2">
            @Html.LabelFor(m => m.CategoryColor, "Kategori Rengi")<br />
            @Html.TextBoxFor(m => m.CategoryColor, new { @type = "color", @class = "form-control form-control-color", style = "width: 60px; height: 40px; padding: 2px;" })
        </div>
        <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    }
</div>